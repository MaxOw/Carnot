    , DeriveGeneric
    , DeriveFunctor
    , DeriveTraversable
    , DeriveFoldable
    , GeneralizedNewtypeDeriving

    , BangPatterns

  build-depends : base >= 4.5 && < 5.0
                , stm
                , mtl
                , array
                , vector
                , containers
                , unordered-containers
                , deepseq
                , relude
                , protolude
                , directory
                , template-haskell
                , bytestring
                , split
                , derive-storable
                , quickselect
                , exceptions
                , ansi-wl-pprint
                , proxied

                , Carnot

                , lens
                , generic-lens >= 1.1.0.0
                , data-default
                , linear
                , boundingboxes

                , diagrams-core
                , diagrams-lib
                , colour

                , gl
                , GLFW-b
                , JuicyPixels
                , freetype2
                , FTGL
                -- , freetype-simple

                , criterion
                , criterion-measurement
                , weigh

                , reload-utils

                , tasty
                , tasty-hunit
                , tasty-golden
                , tasty-smallcheck
                , tasty-quickcheck
                , HUnit
                , smallcheck
                , QuickCheck
                , tree-diff


executable benchmark
  if !flag(build-benchmark)
    buildable:        False
  default-language: Haskell2010
  hs-source-dirs:   benchmarks
  main-is:          Main.hs
  ghc-options:
    -O2
    -Wall
    -fno-warn-missing-pattern-synonym-signatures
    -fno-warn-missing-home-modules
    -fno-warn-unused-imports
    -Werror=missing-fields
    -Werror=incomplete-patterns

  build-depends : base >= 4.5 && < 5.0
                , Carnot
